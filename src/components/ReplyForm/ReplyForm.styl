@import "../../theme/base.styl"

.replyForm
  size 100% auto
  margin 10px 0 0

  &__message
    size 100% 100px
    padding 4px 10px
    border 1px solid $gray


  &__btnWrap
    padding 5px 0
    text-align right


  &__btn
    margin 0 0 0 5px
    padding 5px 10px
    font-weight 700
    color $white
    background $green
    border 0
    &_cancel
      background $gray
